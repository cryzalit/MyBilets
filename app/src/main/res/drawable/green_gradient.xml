<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>

            <solid
                android:color="#eff551" />
            <stroke
                android:width="1dp"
                android:color="#e6f8f9" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#5aedcb"
                android:centerColor="#5cffda"
                android:endColor="#4fd6b7"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#008b8b" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>

